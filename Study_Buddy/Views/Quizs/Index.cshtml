@model IEnumerable<Study_Buddy.Models.Quiz>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Your Quizzes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                Completed
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuizID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuizID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuizID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
