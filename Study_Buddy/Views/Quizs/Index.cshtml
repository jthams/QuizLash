@model IEnumerable<Study_Buddy.Models.Quiz>

@{
    ViewData["Title"] = "Your Quizes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuizName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuizName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuizId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuizId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuizId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
