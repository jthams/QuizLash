@model WebUI.ViewModels.QuizViewModel

@{
    ViewData["Title"] = "Render";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 1;

}
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .flip-card {
        background-color: transparent;
        display: flex;
        height: 300px;
        perspective: 1000px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
        transform-style: preserve-3d;
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    .flip-card-front {
        background-color: inherit;
        color: cadetblue;
        z-index: 2;
    }

    .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
        z-index: 1;
    }
</style>
<h1 class="text-info text-center">Start studying</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card">
            @foreach (var item in Model.Questions)
            {

                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h1 class="text-center">@Html.DisplayFor(i => item.Body)</h1>
                        </div>
                        <div class="flip-card-back">
                            <h1 class="text-center">@Html.DisplayFor(i => item.Answer)</h1>
                        </div>
                    </div>
                </div>
                <br />

                counter++;
            }
        </div>
        <a class="btn btn-block btn-outline-success" asp-action="Index" asp-controller="UserContent">Back to my material</a>
    </div>
</div>
<br />
