@model WebUI.ViewModels.QuizViewModel

@{
    ViewData["Title"] = "CreateQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Setup a new quiz</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuiz">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TopicID" class="control-label"></label>
                <select asp-for="TopicID" class="form-control" asp-items="ViewBag.TopicID"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfQuestions" class="control-label"></label>
                <input asp-for="NumberOfQuestions" class="form-control" />
                <span asp-validation-for="NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Model.Types" class="form-control disabled"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PrivateSource" /> @Html.DisplayNameFor(model => model.PrivateSource)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

