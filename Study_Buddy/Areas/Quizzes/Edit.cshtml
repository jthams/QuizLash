@page
@model WebUI.Areas.Quizzes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Quiz.QuizID" />
            <div class="form-group">
                <label asp-for="Quiz.Score" class="control-label"></label>
                <input asp-for="Quiz.Score" class="form-control" />
                <span asp-validation-for="Quiz.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.NumberOfQuestions" class="control-label"></label>
                <input asp-for="Quiz.NumberOfQuestions" class="form-control" />
                <span asp-validation-for="Quiz.NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.Owner" class="control-label"></label>
                <input asp-for="Quiz.Owner" class="form-control" />
                <span asp-validation-for="Quiz.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz.TopicID" class="control-label"></label>
                <select asp-for="Quiz.TopicID" class="form-control" asp-items="ViewBag.TopicID"></select>
                <span asp-validation-for="Quiz.TopicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

